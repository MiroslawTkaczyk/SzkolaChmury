{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Default Admin username"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Default Admin password"
      }
    },
    "branch": {
      "type": "string",
      "metadata": {
        "description": "Branch name"
      }
    },
    "project": {
      "type": "string",
      "metadata": {
        "description": "Project name"
      }
    },
    "env": {
      "type": "string",
      "metadata": {
        "description": "Environment name"
      }
    },
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "metadata": {
        "description": "Storage Account type for the VM and VM diagnostic storage"
      },
      "allowedValues": [
        "Standard_LRS"
      ]
    },
    "vnetAddressPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.0/16",
      "metadata": {
        "description": "Address prefix"
      }
    },
    "subnetPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.0/24",
      "metadata": {
        "description": "Subnet 1 Prefix"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    }

  },
  "variables": {
    "prefix": "[concat(parameters('branch'), '-', parameters('project'), '-',parameters('env'),'-')]",
    "virtualMachineSize": "Standard_B1s",
    "virtualMachineName": "[concat(variables('prefix'), '1vm')]",
    "nic": "[concat(variables('virtualMachineName'), '-1nic')]",
    "publicIPAddressName": "[concat(variables('virtualMachineName'), '-1pip')]",
    "virtualNetworkName": "[concat(variables('prefix'), 'vnet')]",
    "subnetName": "[concat(variables('virtualNetworkName'), '-','1snet')]",
    "networkSecurityGroupName": "[concat(variables('prefix'), '1nsg')]",
    "subnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('virtualNetworkName'), variables('subnetName'))]",
    "StorageAccountName": "[concat(parameters('branch'), parameters('project'), parameters('env'))]",
    "diskNamePrefix": "[concat('disk-', resourceGroup().location, '-', variables('virtualMachineName'))]"

  },

  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('storageAccountName')]",
      "apiVersion": "2017-06-01",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('storageAccountType')]"
      },
      "kind": "Storage",
      "properties": {}
    }
  ],
  "outputs": {
  }
}
