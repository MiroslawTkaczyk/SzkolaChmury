{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "branch": {
      "type": "string",
      "metadata": {
        "description": "Branch name"
      }
    },
    "project": {
      "type": "string",
      "metadata": {
        "description": "Project name"
      }
    },
    "env": {
      "type": "string",
      "metadata": {
        "description": "Environment name"
      }
    },
    "vnetAddressPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.0/16",
      "metadata": {
        "description": "Vnet address."
      }
    },
    "subnet1Prefix": {
      "type": "string",
      "defaultValue": "10.0.0.0/24",
      "metadata": {
        "description": "Subnet1 address."
      }
    },
    "subnet2Prefix": {
      "type": "string",
      "defaultValue": "10.0.1.0/24",
      "metadata": {
        "description": "Subnet2 address."
      }
    }

  },
  "variables": {
    "vnetNameDeploy": "[concat(parameters('branch'), '-', parameters('project'), '-', parameters('env'), '-vnet')]",
    "prefix": "[concat(parameters('branch'), '-', parameters('project'), '-', parameters('env'))]",
    "nsgNameDeploy": "[concat(parameters('branch'), '-', parameters('project'), '-', parameters('env'), '-nsg')]",
    "vmNameLinked": "vmNameLinked",
    "kvName": "tajnykeyvault",
    "vmName": "[concat(parameters('branch'), '-', parameters('project'), '-', parameters('env'), '-vm')]",
    "subnet1Name": "[concat(parameters('branch'), '-', parameters('project'), '-', parameters('env'), '-subnet1')]",
    "subnet2Name": "[concat(parameters('branch'), '-', parameters('project'), '-', parameters('env'), '-subnet2')]",
    "publicIpAddressName": "[concat(parameters('branch'), '-', parameters('project'), '-', parameters('env'), '-pip1')]",
    "dnsName": "[concat(parameters('branch'), '-', parameters('project'), '-', parameters('env'), '-dns')]"
  },
  "resources": [
    {
      "name": "[variables('nsgNameDeploy')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/MiroslawTkaczyk/architecting-azure-solutions/master/homework/3.2/linkedNSG1.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "nsgName": {
            "value": "[variables('nsgNameDeploy')]"
          }
        }
      }

    },
    {
      "name": "[variables('vnetNameDeploy')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "dependsOn": [
        "[variables('nsgNameDeploy')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/MiroslawTkaczyk/architecting-azure-solutions/master/homework/3.2/linkedVnet1.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vnetName": {
            "value": "[variables('vnetNameDeploy')]"
          },
          "vnetAddressPrefix": {
            "value": "[parameters('vnetAddressPrefix')]"
          },
          "subnet1Name": {
            "value": "[variables('subnet1Name')]"
          },
          "subnet1Prefix": {
            "value": "[parameters('subnet1Prefix')]"
          },
          "subnet2Name": {
            "value": "[variables('subnet2Name')]"
          },
          "subnet2Prefix": {
            "value": "[parameters('subnet2Prefix')]"
          },
          "nsgroupName": {
            "value": "[variables('nsgNameDeploy')]"
          }
        }
      }
    },
    {
      "name": "[concat(variables('vmNameLinked'), copyIndex(1))]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "dependsOn": [
        "[variables('vnetNameDeploy')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/MiroslawTkaczyk/architecting-azure-solutions/master/homework/3.2/linkedVM1.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "adminPassword": {
            "reference": {
              "keyVault": {
                "id": "[resourceId(subscription().subscriptionId, resourceGroup().name, 'Microsoft.KeyVault/vaults', variables('kvName'))]"
              },
              "secretName": "defaultvmadminpassword"
            }
          },
          "adminUsername": {
            "reference": {
              "keyVault": {
                    "adminPassword": {
                        "reference": {
                          "keyVault": {
                            "id": "/subscriptions/<SubscriptionID>/resourceGroups/mykeyvaultdeploymentrg/providers/Microsoft.KeyVault/vaults/<KeyVaultName>"
                          },
                            "secretName": "defaultvmadminpassword"
                        }
                    },
                    "adminUsername": {
                        "reference": {
                          "keyVault": {
                            "id": "/subscriptions/<SubscriptionID>/resourceGroups/mykeyvaultdeploymentrg/providers/Microsoft.KeyVault/vaults/<KeyVaultName>"
                          },
                            "secretName": "defaultvmadminname"
                        }
},              },
              "secretName": "defaultvmadminname"
            }
          },
          "vmNameOrig": {
            "value": "[variables('vmName')]"
          },

          "subnetRef": {
            "value": "[reference(variables('vnetNameDeploy')).outputs.subnetsRefs.value[copyIndex()]]"
          },
          "prefix": {
            "value": "[concat(variables('prefix'))]"

          },
          "suffix": {
            "value": "[concat(copyIndex(1))]"

          }
        }
      },
      "copy": {
        "name": "vmcopy",
        "count": 2
      }
    }
  ],
  "outputs": {

  }
}
