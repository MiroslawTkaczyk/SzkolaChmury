{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminLogin": {
      "type": "string",
      "metadata": {
        "description": "KV admin login"
      }
    },
    "adminSecretPassword": {
      "type": "securestring",
      "metadata": {
        "description": "KV admin pwd"
      }
    }
  },
  "variables": {
    "clientName": "acme",
    "vnetName": "vnet01",
    "nsgName": "nsg",
    "vmName": "ubuntu"
  },
  "resources": [
    {
      "name": "[variables('nsgName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/MiroslawTkaczyk/architecting-azure-solutions/master/homework/3.2/linkedNSG.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "nsgNameOrig": {
            "value": "[concat('nsg', '-', variables('clientName'), '-', resourceGroup().location, '_', 'allow_ssh')]"
          }
        }
      }
    },
    {
      "name": "[variables('vnetName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "dependsOn": [
        "[variables('nsgName')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/MiroslawTkaczyk/architecting-azure-solutions/master/homework/3.2/linkedVnet.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vnetNameOrig": {
            "value": "[concat('vnet', '-', variables('clientName'), '-', resourceGroup().location, '-', variables('vnetName'))]"
          },
          "nsgroupName": {
            "value": "[reference(variables('nsgName')).outputs.nsgOutName.value]"
          }
        }
      }
    },
    {
      "name": "[concat(variables('vmName'), copyIndex(1))]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "dependsOn": [
        "[variables('vnetName')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/MiroslawTkaczyk/architecting-azure-solutions/master/homework/3.2/linkedVM.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "adminUser": {
            "value": "[parameters('adminLogin')]"
          },
          "adminPassword": {
            "value": "[parameters('adminSecretPassword')]"
          },
          "vmNameOrig": {
            "value": "[concat('vm', '-', variables('clientName'), '-', resourceGroup().location, '-', variables('vmName'))]"
          },
          "subnetRef": {
            "value": "[reference(variables('vnetName')).outputs.subnetsRefs.value[copyIndex()]]"
          },
          "suffix": {
            "value": "[concat(copyIndex(1))]"
          }
        }
      },
      "copy": {
        "name": "vmcopy",
        "count": 2
      }
    }
  ],
  "outputs": {

  }
}
